<?xml version="1.0"?>
<!--
build commands
[RadiantPath]: path to Radiant .. C:\Program Files\Gtkradiant
[EnginePath]: path to the engine .. C:\quake3\ C:\Program Files\Quake III Arena\ /usr/local/games/quake3/
-->
<project version="2.0">
<var name="q3map2">"[RadiantPath]q3map2.[ExecutableType]" -v<cond value="[MonitorAddress]"> -connect [MonitorAddress]</cond> -game quake3 -fs_basepath "[EnginePath]"<cond value="[GameName]"> -fs_game [GameName]</cond></var>
<var name="mbspc">"[RadiantPath]mbspc.[ExecutableType]"</var>
<var name="arenau">"[RadiantPath]StartQS.bat"</var>
<build name="Build: LM Ultra+">
<command>[q3map2] -meta -samplesize 8 &quot;[MapFile]&quot;</command>
<command>[q3map2] -vis -fast &quot;[MapFile]&quot;</command>
<command>[q3map2] -light  -novertex  -extlmhacksize 2048 -lightmapsize 2048 -brightness 2 -dark -exposure 200 -patchshadows -shade -samples 8 &quot;[MapFile]&quot;</command>
</build>
<build name="Build: LM Ultra">
<command>[q3map2] -meta -samplesize 4 &quot;[MapFile]&quot;</command>
<command>[q3map2] -vis -fast &quot;[MapFile]&quot;</command>
<command>[q3map2] -light  -novertex  -extlmhacksize 1024 -lightmapsize 1024 -brightness 2 -dark -exposure 200 -patchshadows -shade -samples 4 &quot;[MapFile]&quot;</command>
</build>
<build name="Build: LM High">
<command>[q3map2] -meta -samplesize 2 &quot;[MapFile]&quot;</command>
<command>[q3map2] -vis -fast &quot;[MapFile]&quot;</command>
<command>[q3map2] -light  -novertex  -extlmhacksize 512 -lightmapsize 512 -brightness 2 -dark -exposure 200 -patchshadows -shade -samples 2 &quot;[MapFile]&quot;</command>
</build>
<build name="Build: ST Ultra+">
<command>[q3map2] -meta -samplesize 8 &quot;[MapFile]&quot;</command>
<command>[q3map2] -vis -fast &quot;[MapFile]&quot;</command>
<command>[q3map2] -light  -novertex  -brightness 2 -dark -exposure 200 -patchshadows -shade -samples 8 -fastbounce -bounce 8 -bouncescale 2 -bouncecolorratio 0.80 -gamma 0.70 -filter &quot;[MapFile]&quot;</command>
</build>
<build name="Build: ST Ultra">
<command>[q3map2] -meta -samplesize 4 &quot;[MapFile]&quot;</command>
<command>[q3map2] -vis -fast &quot;[MapFile]&quot;</command>
<command>[q3map2] -light  -novertex  -brightness 2 -dark -exposure 200 -patchshadows -shade -samples 4 -fastbounce -bounce 4 -bouncescale 2 -bouncecolorratio 0.80 -gamma 0.70 -filter &quot;[MapFile]&quot;</command>
</build>
<build name="Build: ST High">
<command>[q3map2] -meta -samplesize 2 &quot;[MapFile]&quot;</command>
<command>[q3map2] -vis -fast &quot;[MapFile]&quot;</command>
<command>[q3map2] -light  -novertex  -brightness 2 -dark -exposure 200 -patchshadows -shade -samples 2 -fastbounce -bounce 2 -bouncescale 2 -bouncecolorratio 0.80 -gamma 0.70 -filter &quot;[MapFile]&quot;</command>
</build>
<build name="Build: ST Very Low">
<command>[q3map2] -meta "[MapFile]"</command>
<command>[q3map2] -vis -fast "[MapFile]"</command>
<command>[q3map2] -light -novertex -fast -fastgrid "[MapFile]"</command>
</build>
<separator />
<build name="Build: Auto LM Ultra+">
<command>[q3map2] -meta -samplesize 8 &quot;[MapFile]&quot;</command>
<command>[q3map2] -vis -fast &quot;[MapFile]&quot;</command>
<command>[q3map2] -light  -novertex  -extlmhacksize 2048 -lightmapsize 2048 -gamma 0.80 -skyscale 1.20 -patchshadows -shade -samples 8 -filter -floodlight &quot;[MapFile]&quot;</command>
</build>
<build name="Build: Auto LM Ultra">
<command>[q3map2] -meta -samplesize 4 &quot;[MapFile]&quot;</command>
<command>[q3map2] -vis -fast &quot;[MapFile]&quot;</command>
<command>[q3map2] -light  -novertex  -extlmhacksize 1024 -lightmapsize 1024 -gamma 0.80 -skyscale 1.20 -patchshadows -shade -samples 4 -floodlight &quot;[MapFile]&quot;</command>
</build>
<build name="Build: Auto LM High">
<command>[q3map2] -meta -samplesize 2 &quot;[MapFile]&quot;</command>
<command>[q3map2] -vis -fast &quot;[MapFile]&quot;</command>
<command>[q3map2] -light  -novertex  -extlmhacksize 512 -lightmapsize 512 -gamma 0.80 -skyscale 1.20 -patchshadows -shade -samples 2 -floodlight &quot;[MapFile]&quot;</command>
</build>
<separator />
<build name="Debug: Fast compile">
<command>[q3map2] -meta "[MapFile]"</command>
<command>[q3map2] -vis "[MapFile]"</command>
<command>[q3map2] -light -styles -novertex -fast -fastgrid "[MapFile]"</command>
</build>
<build name="Debug: Analyze">
<command>[q3map2] -analyze "[BspFile]"</command>
<command>PAUSE</command>
</build>
<build name="Debug: Info">
<command>[q3map2] -info "[BspFile]"</command>
<command>PAUSE</command>
</build>
<separator />
<build name="Edit: Update entities">
<command>[q3map2] -onlyents "[MapFile]"</command>
</build>
<build name="Edit: Export entities">
<command>[q3map2] -exportents "[BspFile]"</command>
</build>
<separator />
<build name="Bots: Fast">
<command>[mbspc] -threads 8 -freetree -breadthfirst -optimize -nocsg -nobrushmerge -bsp2aas &quot;[BspFile]&quot;</command>
<command>PAUSE</command>
</build>
<build name="Bots: Optimized">
<command>[mbspc] -threads 8 -forcesidesvisible -optimize -bsp2aas &quot;[BspFile]&quot;</command>
<command>PAUSE</command>
</build>
<separator />
<build name="Make: Game archive">
<command>[q3map2] -pk3 -png "[BspFile]"</command>
<command>PAUSE</command>
</build>
<build name="Make: Json">
<command>[q3map2] -json "[BspFile]"</command>
</build>
<separator />
<build name="Start: BSP">
<command>[arenau] [MapName] "[EnginePath]"</command>
</build>
<separator />
<build name="Convert: ASE">
<command>[q3map2] -meta -patchmeta "[MapFile]"</command>
<command>[q3map2] -convert -format ase -shadersasbitmap "[BspFile]"</command>
</build>
<build name="Convert: OBJ">
<command>[q3map2] -meta -patchmeta "[MapFile]"</command>
<command>[q3map2] -convert -format obj -shadersasbitmap "[BspFile]"</command>
</build>
</project>

